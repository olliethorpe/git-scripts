#!/bin/bash
# New branch

if [ -n "$1" ]; then
    branch_name="$1"
else
    echo "No branch name provided. Exiting."
    exit
fi

git checkout -b "$branch_name"

git push --set-upstream origin "$branch_name"

git stash

git switch main

git pull

git switch "$branch_name"

git merge main

git stash pop
